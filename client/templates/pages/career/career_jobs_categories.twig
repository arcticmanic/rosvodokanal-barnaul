{% extends "../../layouts/career.twig" %}

{% block main %}
  <section class="section-career-jobs-categories">
    {% include '../../includes/stdEls/page-content__title_with-underline.twig' with {"title" : "11 открытых вакансий"} %}

    <article class="std-grid__content jobs-grid__cont">
      <div class="std-grid jobs-grid">
        {% for idx, job in jobs %}
          <a href="career_jobs_list.html" class="std-grid__item jobs-item">
            <div class="std-grid__img-cont jobs-item__img-cont">
              <img data-src="../assets/img/jobs-categories-img-{{idx + 1}}.png" alt="" class="lazy std-grid__img jobs-item__img">
            </div>

            <div class="std-grid__bage jobs-item__bage">
              <p class="std-grid__title jobs-item__title">{{job.title}}</p>
              <div class="jobs-item__info">
                <div class="std-grid__row jobs-item__row">
                  <p class="jobs-item__amount">{{job.amount}}</p>
                  {% include '../../includes/svg/icon-arrow-svg.twig' with {'classes': 'std-grid__arrow jobs-item__arrow'} %}
                </div>
              </div>
            </div>
          </a>
        {% endfor %}
      </div>
    </article>

    <hr class="dashed">

    <div class="jobs-categories-form__cont">
      {% include "../../includes/stdBlocks/jumbo-img.twig" with {"imgSrc": "../assets/img/jobs-categories-form-img.png", "title": "Оставьте резюме", "subtitle": "Работа у нас", "classes": "jumbo-img__cont_on-top"} %}
      <form action="" class="form form_bc-grey form_jobs-categories">
        <div class="input-with-label__row input-with-label__row_2">
          <div class="input-with-label">
            <label>Ваше имя *</label>
            <input type="text"  class="required input_dashed">
          </div>
          <div class="input-with-label">
            <label>Контактные данные *</label>
            <input type="text"  class="required input_dashed">
          </div>
        </div>

        <div class="input-with-label">
          <label>Дополнительная информация</label>
          <textarea class="textarea_dashed"></textarea>
        </div>

        <div class="input-with-label">
          <label class="strong">Файл резюме</label>
          {% include '../../includes/stdEls/input_file.twig' with {"btnText": "Обзор", "inputFileClasses": "input_file_dashed"} %}
        </div>
        <span class="form-info italic">Прикрепить резюме (допустимые расширения файлов .doc .pdf .jpg .jpeg .rar .zip, до 2 Мб)</span>

        <div class="form-footer">
          {% include '../../includes/stdEls/checkbox.twig' with {"id": "check1", "text": "Я принимаю <a href='#'>Политику конфиденциальности</a>", "isRequired": true, "checkboxContainerClasses": "checkboxContainer_dashed checkboxContainer_bg-white"} %}


          <button type="submit" class="btn btn_colorPrimary submit-element">Отправить</button>
        </div>
      </form>
    </div>

    
  </section>
{% endblock %}